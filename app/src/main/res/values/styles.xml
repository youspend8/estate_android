<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDefault</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorGrey</item>
    </style>

    <style name="AnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/CustomAnim</item>
    </style>

    <style name="CustomAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>

    <string name="tableHeaderTextSize">10dp</string>
    <string name="tableBodyTextSize">12dp</string>
</resources>
